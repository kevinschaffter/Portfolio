<div class="col-md-4">
  <div class="card" data-id="<%= portfolio_item.id %>" >
    <%= link_to image_tag portfolio_item.thumb_image, portfolio_show_path(portfolio_item), width: '100%' unless portfolio_item.thumb_image.nil? %>
    <p class="card-text"><span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
    </p>
  </div>
</div>
